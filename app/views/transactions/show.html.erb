<div class="max-w-xs mx-auto mt-12">
    <div class="bg-white p-8 rounded-2xl shadow-xl border border-gray-200">

        <%= turbo_stream_from "transaction_#{@transaction.id}" %>

        <div class="mb-8">
            <div class="inline-block rounded-md bg-gray-100 px-3 py-1 text-xs font-medium text-gray-700 mb-4">
                Transação #<%= @transaction.id %>
            </div>

            <div class="text-2xl font-bold text-gray-900">
                Detalhes do Registro
            </div>
        </div>

        <div class="space-y-2 mb-8">
            <span class="detail-label">Nome</span>

            <div class="detail-value">
                <% if @transaction.name.present? %>
                    <%= @transaction.name%>
                <% else %>
                    <span class="text-gray-400 font-normal text-xl italic">Não informado</span>
                <% end %>
            </div>
        </div>

        <div class="space-y-2 mb-8">
            <span class="detail-label">Valor Total</span>

            <%= render partial: "transactions/amount", locals: { transaction: @transaction } %>
        </div>

        <div>
            <%= link_to "Editar Transação", edit_transaction_path(@transaction), class: "btn-primary w-full text-center" %>
        </div>

        <div class="mt-8 text-center">
            <%= link_to "Voltar para a lista", transactions_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
        </div>
    </div>
</div>